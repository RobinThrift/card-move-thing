{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
        "mocha": 1
    },
    "rules": {
        "comma-dangle": [2, "never"],
        "id-length": 0,
        "indent": [2, 4, {"SwitchCase": 1}],
        "no-bitwise": 1,
        "no-multi-spaces": [2, {
            "exceptions": {
                "VariableDeclarator": true
            }
        }],
        "prefer-const": 0,
        "react/jsx-boolean-value": 0,
        "new-cap": 0
    },
    "plugins": [
        "babel",
        "react"
    ]
}
